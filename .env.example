# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# NOTE: For production, use a restricted database role instead of service role
# See src/db/migrations/003_restricted_role.sql for setup instructions
# SUPABASE_RESTRICTED_KEY=your_restricted_role_key

# Claude API Configuration
ANTHROPIC_API_KEY=sk-ant-your-api-key

# OpenAI Configuration (for embeddings)
OPENAI_API_KEY=sk-your-openai-key

# Airtable Configuration (Optional)
AIRTABLE_ACCESS_TOKEN=your_airtable_personal_access_token
AIRTABLE_BASE_ID=your_base_id

# Google Workspace Configuration (Optional - Not yet published)
# Get credentials from: https://console.cloud.google.com/
# Enable Gmail API and Google Drive API
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8080/callback

# GitHub Configuration (Optional - For testing MCP integration)
# Get token from: https://github.com/settings/tokens
# Scopes needed: repo, read:org
GITHUB_TOKEN=ghp_your_github_personal_access_token

# Morning Briefing Configuration
# Your Telegram user ID (get from @userinfobot on Telegram)
TELEGRAM_USER_ID=your_telegram_user_id

# OpenWeather API (for weather forecasts)
# Get free API key at: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key

# Perplexity API (for AI news and 49ers updates)
# Get API key at: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=your_perplexity_api_key

# User location settings
USER_ZIP_CODE=72756
USER_LOCATION=Northwest Arkansas

# Application Configuration
LOG_LEVEL=info
NODE_ENV=development
